{
  "name": "lama-recruitment-present-it-backend",
  "version": "1.0.0",
  "description": "Recruitment task for Lama Media",
  "main": "run.js",
  "license": "MIT",
  "repository": "https://github.com/antonisierakowski/lama-recruitment-present-it-backend",
  "scripts": {
    "start": "node ./dist/run.js",
    "dev": "nodemon --watch '*.ts' --exec 'yarn lint && ts-node' src/run.ts",
    "build": "yarn lint && tsc",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint-fix": "eslint \"./src/**/*.ts\" --fix",
    "format": "prettier --write '*/**/*.ts'"
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/pg": "^7.14.4",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "knex": "^0.21.2",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "pg": "^8.3.0",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
