{
  "name": "lama-recruitment-present-it-backend",
  "version": "1.0.0",
  "description": "Recruitment task for Lama Media",
  "main": "run.js",
  "license": "MIT",
  "repository": "https://github.com/antonisierakowski/lama-recruitment-present-it-backend",
  "scripts": {
    "start": "node ./dist/run.js",
    "build": "yarn lint && tsc",
    "dev": "nodemon --watch '*.ts' --exec 'ts-node' src/run.ts",
    "lint": "eslint \"./src/**/*.ts\"",
    "fix-lint": "eslint \"./src/**/*.ts\" --fix",
    "format": "prettier --write '*/**/*.ts'",
    "clear-static": "rm ./__static/*",
    "init-db": "./db/initialise_db.sh"
  },
  "dependencies": {
    "@types/busboy": "^0.2.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.158",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.4",
    "@types/pg": "^7.14.4",
    "@types/shortid": "^0.0.29",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "busboy": "^0.3.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.2",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.19",
    "morgan": "^1.10.0",
    "multer": "2.0.0-rc.2",
    "nodemon": "^2.0.4",
    "pg": "^8.3.0",
    "prettier": "^2.0.5",
    "readable-stream-clone": "^0.0.7",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.15",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "ws": "^7.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
