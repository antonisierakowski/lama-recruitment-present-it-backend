{
  "name": "presentations",
  "version": "1.0.0",
  "description": "Backend services for presentations app",
  "main": "run.js",
  "license": "MIT",
  "repository": "https://github.com/antonisierakowski/lama-recruitment-present-it-backend",
  "scripts": {
    "build": "yarn lint && tsc",
    "dev-api": "NODE_ENV=development nodemon --watch '*.ts' --exec 'ts-node' src/entrypoints/api.ts",
    "dev-ws": "NODE_ENV=development nodemon --watch '*.ts' --exec 'ts-node' src/entrypoints/ws.ts",
    "lint": "eslint \"./src/**/*.ts\"",
    "fix-lint": "eslint \"./src/**/*.ts\" --fix",
    "format": "prettier --write '*/**/*.ts'",
    "clear-static": "rm ./__static/*",
    "init-db": "./db/initialise_db.sh"
  },
  "dependencies": {
    "@types/busboy": "^0.2.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/pg": "^7.14.7",
    "@types/shortid": "^0.0.29",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "aws-sdk": "^2.799.0",
    "busboy": "^0.3.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "express": "^4.17.1",
    "husky": "^4.3.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.12",
    "lint-staged": "^10.5.2",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "multer": "2.0.0-rc.2",
    "nodemon": "^2.0.6",
    "pg": "^8.5.1",
    "prettier": "^2.2.0",
    "readable-stream-clone": "^0.0.7",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "ws": "^7.4.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
